<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dramaandcompany.dongyeon.assignment.MainActivity">

    <SurfaceView
        android:id="@+id/cameraSurfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="48dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/cameraExitButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="CameraExitButtonClicked"
            android:text="종료"
            android:textAlignment="center" />

        <Button
            android:id="@+id/cameraTakeButton"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:onClick="CameraTakeButtonClicked" />

        <Button
            android:id="@+id/cameraOkButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:onClick="CameraOkButtonClicked"
            android:text="완료(0)"
            android:textAlignment="center" />
    </RelativeLayout>
</RelativeLayout>
