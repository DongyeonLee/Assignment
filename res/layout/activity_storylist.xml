<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dramaandcompany.dongyeon.assignment.MainActivity">

    <ImageView
        android:background="@drawable/line"
        android:id="@+id/storyListLineImage1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/storyListSearchEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/storyListLineImage1"
        android:gravity="center_vertical"
        android:hint="검색어를 입력해 주세요"
        android:paddingLeft="5dp" />

    <ImageView
        android:background="@drawable/line"
        android:id="@+id/storyListLineImage2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/storyListSearchEditText" />

    <ListView
        android:id="@+id/storyListViewMonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/storyListLineImage2">

    </ListView>
</RelativeLayout>
